# ============================================================
# Artemis Health - Environment Configuration Template
# ============================================================
# Copy this file to .env and configure with your actual values
# Usage: cp .env.example .env
# ============================================================

# ------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------
# SQLite database for storing health scores and alerts
# Located at: data/alert_state.db
# Note: PostgreSQL support has been removed - SQLite only

# ------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------
# External API keys for third-party services
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_ENDPOINT=https://api.example.com/v1

# ------------------------------------------------------------
# Sensor Data Configuration
# ------------------------------------------------------------
# Path to raw sensor data files
RAW_DATA_PATH=data/raw/
# Data collection interval in seconds (default: 60 for 1 minute)
COLLECTION_INTERVAL=60
# Sensor ID prefix for device identification
SENSOR_ID_PREFIX=SENSOR_

# ------------------------------------------------------------
# Alert Thresholds
# ------------------------------------------------------------
# Temperature thresholds (in Celsius)
FEVER_THRESHOLD=39.5
HEAT_STRESS_THRESHOLD=40.0
HYPOTHERMIA_THRESHOLD=37.0

# Activity thresholds
LOW_ACTIVITY_THRESHOLD=0.1
HIGH_ACTIVITY_THRESHOLD=0.8

# Alert cooldown period in minutes (prevent alert spam)
ALERT_COOLDOWN_MINUTES=30

# ------------------------------------------------------------
# Health Scoring Parameters
# ------------------------------------------------------------
# Weight factors for health score calculation (must sum to 1.0)
TEMPERATURE_WEIGHT=0.4
ACTIVITY_WEIGHT=0.3
BEHAVIOR_WEIGHT=0.3

# Health score alert threshold (0-100)
CRITICAL_HEALTH_SCORE=30
WARNING_HEALTH_SCORE=50

# ------------------------------------------------------------
# Machine Learning Configuration
# ------------------------------------------------------------
# Model file paths
BEHAVIOR_MODEL_PATH=models/trained/behavior_classifier.pkl
HEALTH_MODEL_PATH=models/trained/health_predictor.pkl

# Training parameters
TRAIN_TEST_SPLIT=0.2
RANDOM_SEED=42
CV_FOLDS=5

# Feature engineering
WINDOW_SIZE_MINUTES=10
OVERLAP_PERCENTAGE=0.5

# ------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file paths
SYSTEM_LOG_PATH=logs/system/app.log
ALERT_LOG_PATH=logs/alerts/alerts.json
HEALTH_SCORE_LOG_PATH=logs/health_scores/scores.csv

# Log rotation
LOG_MAX_BYTES=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# ------------------------------------------------------------
# Streamlit Dashboard Configuration
# ------------------------------------------------------------
# Dashboard port and host
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Dashboard refresh interval in seconds
DASHBOARD_REFRESH_INTERVAL=60

# Maximum number of animals to display simultaneously
MAX_DISPLAY_ANIMALS=50

# ------------------------------------------------------------
# Email/Notification Configuration (Optional)
# ------------------------------------------------------------
# SMTP configuration for email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_ADDRESS=noreply@artemishealth.com

# Email recipients for critical alerts (comma-separated)
ALERT_EMAIL_RECIPIENTS=admin@example.com,vet@example.com

# Enable/disable email notifications
EMAIL_ALERTS_ENABLED=false

# ------------------------------------------------------------
# Data Retention Policy
# ------------------------------------------------------------
# Number of days to retain raw data
RAW_DATA_RETENTION_DAYS=90

# Number of days to retain processed data
PROCESSED_DATA_RETENTION_DAYS=365

# Number of days to retain logs
LOG_RETENTION_DAYS=30

# ------------------------------------------------------------
# Performance Configuration
# ------------------------------------------------------------
# Number of worker threads for data processing
NUM_WORKERS=4

# Batch size for bulk operations
BATCH_SIZE=1000

# Enable/disable caching
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300

# ------------------------------------------------------------
# Development/Debug Settings
# ------------------------------------------------------------
# Enable debug mode (more verbose logging, disable in production)
DEBUG_MODE=false

# Enable profiling (performance monitoring)
ENABLE_PROFILING=false

# Use simulated data instead of real sensors
USE_SIMULATED_DATA=false
